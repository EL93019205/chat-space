.main-chat
  .main-chat__group-info
    .main-chat__group-info__names
      .main-chat__group-info__names__group-name
        =@group.name
      .main-chat__group-info__names__member-names
        Memberï¼š
        - @group.users.each do |user|
          = "#{user.name} "
    = link_to edit_group_path(@group), class: "main-chat__group-info__edit-button" do
      = "Edit"
  .main-chat__message-list
    = render @messages
  .main-chat__message-form
    .main-chat__message-form__window
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: "main-chat__message-form__window__message", placeholder: "type a message"
        .main-chat__message-form__window__mask
          = f.label :image, class: "main-chat__message-form__window__mask__image" do
            = icon('fas', 'image', class: 'main-chat__message-form__window__mask__image--icon')
            = f.file_field :image, class: 'main-chat__message-form__window__mask__image--hidden'
        = f.submit 'Send', class: "main-chat__message-form__window__submit"










