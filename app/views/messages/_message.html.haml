.main-chat__message-list__message
  .main-chat__message-list__message__user-info
    .main-chat__message-list__message__user-info__name
      = message.user.name
    .main-chat__message-list__message__user-info__time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main-chat__message-list__message__post-text
    = message.content if message.content.present?
  .main-chat__message-list__message__post-text
    = image_tag message.image.url if message.image.present?
